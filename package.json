{
  "name": "la-discotheque",
  "version": "1.0.0",
  "description": "Fancy Discogs-powered collection viewer",
  "author": "lovethebomb <lucas@lovethebomb.eu>",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "test": "jest"
  },
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.0.0-beta.47",
    "@vue/test-utils": "^1.0.0-beta.16",
    "babel-jest": "^22.4.4",
    "dotenv": "^5.0.1",
    "firebase": "^5.0.3",
    "gsap": "^2.0.0",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^22.4.4",
    "jest-serializer-vue": "^1.0.0",
    "nuxt": "^1.0.0",
    "slugify": "^1.3.0",
    "vue-jest": "^2.6.0",
    "vue-test-utils": "^1.0.0-beta.11",
    "vuefire": "^1.4.5"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "eslint": "^4.15.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-vue": "^4.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ]
  }
}
